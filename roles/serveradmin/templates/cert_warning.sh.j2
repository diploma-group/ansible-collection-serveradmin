# Exit on error:
set -e
source {{ serveradmin.path }}/include_common.sh

grep -Poh "(?<=ssl_certificate)\s+.*\s*(?=;)" /etc/nginx/conf.d/{{ organisation.name }}/* | grep -o "\S*" | sort | uniq | while read -r cert ; do
   openssl x509 -checkend $1 -noout -in "$cert" &> /dev/null
done


